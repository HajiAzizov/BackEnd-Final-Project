@model ProductEditVM

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h2>Edit Product</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">Upload New Image</label>
            <input asp-for="ImgFile" type="file" class="form-control" />
            <span asp-validation-for="ImgFile" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Genres</label>
            <select asp-for="GenreIds" asp-items="@(new MultiSelectList(ViewBag.Genres, "Id", "Name"))" multiple class="form-select"></select>
            <span asp-validation-for="GenreIds" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Authors</label>
            <select asp-for="AuthorIds" asp-items="@(new MultiSelectList(ViewBag.Authors, "Id", "FullName"))" multiple class="form-select"></select>
            <span asp-validation-for="AuthorIds" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
