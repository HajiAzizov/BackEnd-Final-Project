@model List<ContactMessage>

@{
    ViewData["Title"] = "Contact Messages";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Contact Messages</h2>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Date</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.FullName</td>
                    <td>@message.Email</td>
                    <td>@message.Subject</td>
                    <td>
                        @if (!string.IsNullOrEmpty(message.Message) && message.Message.Length > 50)
                        {
                            <span>@message.Message.Substring(0, 50)...</span>
                        }
                        else
                        {
                            <span>@message.Message</span>
                        }

                    </td>
                    <td>@message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Detail" asp-route-id="@message.Id">Detail</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@message.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
