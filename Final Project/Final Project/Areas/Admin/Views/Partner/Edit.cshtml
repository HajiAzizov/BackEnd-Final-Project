@model PartnerEditVM
@{
    ViewData["Title"] = "Edit Partner";
}

<div class="container mt-4">
    <h2>Edit Partner</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">Change Image</label>
            <input asp-for="ImgFile" type="file" class="form-control" />
            <span asp-validation-for="ImgFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
