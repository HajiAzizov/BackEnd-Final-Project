@model List<PartnerVM>
@{
    ViewData["Title"] = "Partner List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Partner List</h2>
        <a class="btn btn-success" asp-action="Create">+ Add New Partner</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var partner in Model)
            {
                <tr>
                    <td>
                        <img src="~/@partner.Img" alt="Partner image" style="width: 100px; height: 100px; object-fit: cover; border-radius: 0;" />
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Detail" asp-route-id="@partner.Id">Detail</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@partner.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@partner.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
