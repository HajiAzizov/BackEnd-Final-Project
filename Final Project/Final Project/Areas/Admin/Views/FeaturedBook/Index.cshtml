@model List<FeaturedBookVM>

@{
    ViewData["Title"] = "Featured Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Featured Books</h2>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/@item.Img" style="width: 100px; height: 100px; object-fit: cover; border-radius: 0;" /></td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>$@item.Price</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
