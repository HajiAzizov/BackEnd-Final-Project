@model FeaturedBookVM

@{
    ViewData["Title"] = "Featured Book Detail";
}

<div class="container mt-4">
    <h2>Book Details</h2>

    <div class="card" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/@Model.Img" class="img-fluid rounded-start" alt="Book image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text"><strong>Author:</strong> @Model.Author</p>
                    <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                    <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
