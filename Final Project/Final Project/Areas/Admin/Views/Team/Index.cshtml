@model List<TeamVM>

@{
    ViewData["Title"] = "Team Members";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Team Members</h2>
        <a class="btn btn-success" asp-action="Create">+ Add New Member</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Position</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>
                        <img src="~/@member.Img" alt="@member.Name" style="width: 100px; height: 100px; object-fit: cover;" />
                    </td>
                    <td>@member.Name</td>
                    <td>@member.Position</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Detail" asp-route-id="@member.Id">Detail</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@member.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@member.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this member?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
