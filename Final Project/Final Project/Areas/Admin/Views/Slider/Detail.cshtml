@model SliderVM

@{
    ViewData["Title"] = "Slider Detalları";
}

<div class="container mt-4">
    <h2 class="mb-4">Slider Details</h2>

    <div class="card shadow-sm rounded" style="max-width: 700px;">
        <img src="~/@Model.Img" class="card-img-top img-fluid rounded-top" alt="Slider Image" />
        <div class="card-body">
            <h3 class="card-title">@Model.Title</h3>
            <p class="card-text">@Model.Description</p>
            <a asp-action="Index" class="btn btn-primary mt-3">Back</a>
        </div>
    </div>
</div>
