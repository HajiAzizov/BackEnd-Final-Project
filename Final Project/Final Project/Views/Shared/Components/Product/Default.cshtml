@model IEnumerable<ProductVM>

<section class="container py-5 products-main">
    <div class="row g-4">
        <div class="col-lg-3">
            <div class="filter-sidebar p-3 bg-white rounded shadow-sm">
                <h5 class="mb-3">FILTER BY</h5>
                <hr />

                <!-- Categories -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-2">Genres</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cat1" />
                        <label class="form-check-label" for="cat1">Headphones (7)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cat2" />
                        <label class="form-check-label" for="cat2">Accessories (13)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cat3" />
                        <label class="form-check-label" for="cat3">Gaming controllers (6)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cat4" />
                        <label class="form-check-label" for="cat4">Gaming Mouse (10)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cat5" />
                        <label class="form-check-label" for="cat5">Keyboards (9)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cat6" />
                        <label class="form-check-label" for="cat6">Wireless headset (5)</label>
                    </div>
                </div>

                <!-- Price -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-2">Price</h6>
                    <div class="range-slider">
                        <input type="range" class="form-range" id="rangeMin" min="0" max="90" value="0" />
                        <input type="range" class="form-range" id="rangeMax" min="0" max="90" value="90" />
                    </div>
                    <div class="d-flex justify-content-between small">
                        <span id="rangeMinVal">$0</span>
                        <span id="rangeMaxVal">$90</span>
                    </div>
                    <button class="btn btn-dark btn-sm mt-2 w-100">Filter</button>
                </div>

                <!-- Brands -->
                <div>
                    <h6 class="fw-bold mb-2">Brands</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="brand1" />
                        <label class="form-check-label" for="brand1">Akko (4)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="brand2" />
                        <label class="form-check-label" for="brand2">Apple (6)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="brand3" />
                        <label class="form-check-label" for="brand3">Logitech (7)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="brand4" />
                        <label class="form-check-label" for="brand4">Rapoo (6)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="brand5" />
                        <label class="form-check-label" for="brand5">Razer (9)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="brand6" />
                        <label class="form-check-label" for="brand6">Sony (8)</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4">
                        <div class="product-main-item">
                            <img src="/uploads/products/@product.Img" alt="@product.Name" />
                            <h2>@product.Name</h2>
                            <h4>@string.Join(", ", product.Authors)</h4>
                            <div class="product-main-item-bottom">
                                <i class="fa-regular fa-cart-plus" style="cursor:pointer;"
                                   onclick="location.href='@Url.Action("Add", "Basket", new { productId = product.Id })'">
                                </i>
                                <h3>$@product.Price.ToString("F2")</h3>
                                <i class="fa-regular fa-heart"></i>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <section class="text-center py-3">
                <a href="/Product" class="by-nw">
                    Show More
                    <i class="fa-solid fa-arrow-down"></i>
                </a>
            </section>
        </div>
    </div>
</section>
