@model ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot Password";
}

<section class="hero-2">
    <h2>Forgot Password</h2>
</section>

<section class="py-5 container">
    <div class="frgt-pass-inner">
        <div class="row g-5 align-items-center g-4">
            <div class="col-lg-12">
                <form asp-action="ForgotPassword" method="post">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control" placeholder="Your Email" />
                                <label asp-for="Email">Your Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-self by-nw py-3 px-5" type="submit">
                                Verify
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
